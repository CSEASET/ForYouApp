<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.helpinghands.foryou.yearlist" android:weightSum="1">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
        android:id="@+id/scrollView" android:scrollbarStyle="outsideInset"
        android:layout_gravity="center_horizontal">

        <LinearLayout android:orientation="vertical" android:id="@+id/container"
            android:showDividers="middle" android:divider="?android:dividerHorizontal"
            android:layout_width="fill_parent" android:layout_height="wrap_content">

            <TextView android:text="Choose Year" android:layout_width="match_parent"
                android:gravity="center" android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginBottom="@dimen/yearlist_margin_bottom"
                android:layout_height="60dp" />

            <Button android:layout_width="match_parent"

                android:layout_height="60dp" android:onClick="clickHandler" android:tag="1"
                android:text="I  YEAR" android:id="@+id/button"
                android:layout_gravity="center_horizontal" />

            <Button android:layout_width="match_parent" android:onClick="clickHandler"

                android:layout_height="60dp" android:tag="2" android:text="II  YEAR"
                android:id="@+id/button2" android:layout_gravity="center_horizontal" />

            <Button android:layout_width="match_parent" android:onClick="clickHandler"

                android:layout_height="60dp" android:tag="3" android:text="III  YEAR"
                android:id="@+id/button3" android:layout_gravity="center_horizontal" />

            <Button android:layout_width="match_parent" android:layout_height="60dp"
                android:onClick="clickHandler"

                android:tag="4" android:text="IV  YEAR" android:id="@+id/button4"
                android:layout_gravity="center_horizontal" />
            <Button android:layout_width="match_parent" android:layout_height="5dp"

                android:id="@+id/button5" android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
